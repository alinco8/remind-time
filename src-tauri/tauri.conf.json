{
    "build": {
        "beforeDevCommand": "bun run dev",
        "beforeBuildCommand": "bun run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "remind-time",
        "version": "0.0.1"
    },
    "tauri": {
        "updater": {
            "active": true,
            "dialog": false,
            "pubkey": "",
            "windows": {
                "installMode": "passive",
                "installerArgs": []
            }
        },
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            }
        },
        "windows": [
            {
                "title": "remind-time",
                "width": 800,
                "height": 600,
                "hiddenTitle": true,
                "titleBarStyle": "Overlay",
                "label": "remind-time",
                "visible": false,
                "focus": false
            }
        ],
        "security": {
            "csp": null
        },
        "systemTray": {
            "title": "this is title",
            "iconPath": "./icons/icon.png",
            "iconAsTemplate": true
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "jp.alinco8.remind-time",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        }
    }
}
