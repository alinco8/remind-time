{
    "build": {
        "beforeDevCommand": "bun run dev",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist",
        "devUrl": "http://localhost:1420"
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "productName": "アルティメットノコリジカンワカルヤーツ",
    "version": "0.0.1",
    "identifier": "jp.alinco8.ultimate-nokori-jikan-wakaru-yaatu",
    "app": {
        "security": {
            "csp": null
        },
        "windows": [
            {
                "label": "main",
                "width": 800,
                "height": 600,
                "hiddenTitle": true,
                "resizable": true,
                "titleBarStyle": "Overlay"
            }
        ]
    }
}
